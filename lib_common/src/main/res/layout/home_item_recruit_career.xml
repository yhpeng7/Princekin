<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="10dp"
    android:background="#F4F4F4"
    android:layout_marginRight="13dp">


    <TextView
        android:id="@+id/home_txtv_item_recruit_career_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_txtv_item_recruit_career_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/home_txtv_item_recruit_career_name"
        app:layout_constraintTop_toBottomOf="@+id/home_txtv_item_recruit_career_name" />

    <TextView
        android:id="@+id/home_txtv_item_recruit_career_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:text="TextView"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/home_txtv_item_recruit_career_company"
        app:layout_constraintStart_toStartOf="@+id/home_txtv_item_recruit_career_name"
        app:layout_constraintTop_toTopOf="@+id/home_txtv_item_recruit_career_company" />

    <TextView
        android:id="@+id/home_txtv_item_recruit_career_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/home_txtv_item_recruit_career_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_txtv_item_recruit_career_major" />
</android.support.constraint.ConstraintLayout>