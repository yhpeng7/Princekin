<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <Button
        android:id="@+id/home_btn_dialog_checkin_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/home_background_dialog_checkin_button"
        android:paddingStart="19dp"
        android:paddingTop="15dp"
        android:paddingEnd="19dp"
        android:paddingBottom="15dp"
        android:text="今日打卡"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_dialog_checkin_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_dialog_checkin_card" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/home_dialog_checkin_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_background_dialog_checkin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.yhklsdf.lib_common.module.home.item.BackGroundView
            android:id="@+id/home_imgv_dialog_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_imgbtn_dialog_cancel" />

        <ImageButton
            android:id="@+id/home_imgbtn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/home_ic_dialog_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_txtv_dialog_checkin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="103dp"
            android:text="XXX同学"
            android:textColor="@color/home_color_dialog_checkin_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="您"
            android:textColor="@color/home_color_dialog_checkin_text"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/home_txtv_dialog_checkin_name"
            app:layout_constraintTop_toBottomOf="@+id/home_txtv_dialog_checkin_name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已"
            android:textColor="@color/home_color_dialog_checkin_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="连续打卡"
            android:textColor="@color/home_color_dialog_checkin_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


        <com.yhklsdf.lib_common.module.home.item.UnScrollbleRecyclerView
            android:id="@+id/home_recycler_dialog_hundred"
            android:layout_width="39dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/home_layer_dialog_timer_background"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <com.yhklsdf.lib_common.module.home.item.UnScrollbleRecyclerView
            android:id="@+id/home_recycler_dialog_ten"
            android:layout_width="39dp"
            android:layout_height="55dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/home_layer_dialog_timer_background"
            android:clickable="false"
            android:gravity="center"
            android:text="T"
            android:textSize="44sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_recycler_dialog_hundred"
            app:layout_constraintStart_toEndOf="@+id/home_recycler_dialog_hundred"
            app:layout_constraintTop_toTopOf="@+id/home_recycler_dialog_hundred" />

        <com.yhklsdf.lib_common.module.home.item.UnScrollbleRecyclerView
            android:id="@+id/home_recycler_dialog_single"
            android:layout_width="39dp"
            android:layout_height="55dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/home_layer_dialog_timer_background"
            android:clickable="false"
            android:gravity="center"
            android:text="T"
            android:textSize="44sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_recycler_dialog_ten"
            app:layout_constraintStart_toEndOf="@+id/home_recycler_dialog_ten"
            app:layout_constraintTop_toTopOf="@+id/home_recycler_dialog_ten" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="43dp"
            android:text="天"
            android:textColor="@color/home_color_dialog_checkin_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home_recycler_dialog_single"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/home_txtv_dialog_checkin_exceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="@color/home_color_dialog_checkin_text"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/home_recycler_dialog_hundred" />

        <TextView
            android:id="@+id/home_txtv_dialog_checkin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="36dp"
            android:text="TextView"
            android:textColor="@color/home_color_dialog_checkin_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_txtv_dialog_checkin_exceed" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>