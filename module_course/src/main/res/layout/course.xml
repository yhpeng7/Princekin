<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="107dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/course_background">

        <android.support.v7.widget.CardView
            android:id="@+id/course_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/iv_course"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/java_course" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="JAVA零基础从入门到精通"
            android:textColor="#010101"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/course_card" />

        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精品付费"
                android:textSize="10sp"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:textColor="#C64343" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_course_type"
                android:src="@mipmap/course_logo" />

            <TextView
                android:id="@+id/tv_join_count"
                android:textSize="10sp"
                android:text="3360"
                android:layout_toRightOf="@id/iv_logo"
                android:layout_marginLeft="1dp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>