<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    app:elevation="7dp">

    <ImageView
        android:id="@+id/h_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/home_1" />

    <com.yhklsdf.lib_common.ui.MyTextView
        android:id="@+id/h_tv_plan"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="102.5dp"
        android:gravity="center"
        android:text="星规划"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.yhklsdf.lib_common.ui.MyTextView
        android:id="@+id/h_tv_honor"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="星荣誉"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/h_tv_plan"
        app:layout_constraintStart_toEndOf="@+id/h_tv_plan"
        app:layout_constraintTop_toTopOf="@+id/h_tv_plan"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/h_imageview2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/home_0" />

    <com.yhklsdf.lib_common.ui.MyTextView
        android:id="@+id/h_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="13dp"
        android:text="西邮"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>