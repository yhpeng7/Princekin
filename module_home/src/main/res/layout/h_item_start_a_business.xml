<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="11dp"
    android:layout_marginStart="13dp"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="13dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/h_sab_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/test_job_head_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/h_sab_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/h_sab_iv"
            app:layout_constraintTop_toTopOf="@+id/h_sab_iv" />

        <TextView
            android:id="@+id/h_sab_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/h_sab_tv_1"
            app:layout_constraintStart_toEndOf="@+id/h_sab_tv_1"
            app:layout_constraintTop_toTopOf="@+id/h_sab_tv_1" />

        <TextView
            android:id="@+id/h_sab_tv_3"
            android:layout_width="170dp"
            android:layout_height="19dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="3dp"
            android:background="#F19149"
            android:gravity="center_vertical"
            android:paddingStart="4dp"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/h_sab_iv"
            app:layout_constraintStart_toEndOf="@+id/h_sab_iv" />

        <TextView
            android:id="@+id/h_sab_tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/h_sab_tv_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/h_sab_tv_3" />

        <ImageView
            android:id="@+id/h_imageview3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/sa_b_bookmark" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>