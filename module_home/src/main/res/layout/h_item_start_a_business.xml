<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="11dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="13dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#0F4378">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/h_circleimageview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/test_job_head_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/h_textview17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="3dp"
            android:text="胡**"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/h_circleimageview"
            app:layout_constraintTop_toTopOf="@+id/h_circleimageview" />

        <TextView
            android:id="@+id/h_textview18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="创咖创立者"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/h_textview17"
            app:layout_constraintStart_toEndOf="@+id/h_textview17"
            app:layout_constraintTop_toTopOf="@+id/h_textview17" />

        <TextView
            android:id="@+id/h_textview19"
            android:layout_width="170dp"
            android:layout_height="19dp"
            android:background="#F19149"
            android:gravity="center_vertical"
            android:paddingStart="4dp"
            android:text="关于创业，我想说的是。。。"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="37dp" />

        <TextView
            android:id="@+id/h_textview20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="5.15"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/h_textview19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/h_textview19" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>