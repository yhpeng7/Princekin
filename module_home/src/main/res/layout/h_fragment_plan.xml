<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="12dp"
            android:elevation="3dp"
            app:cardCornerRadius="11dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/h_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner_home">

                    <com.yhklsdf.module_home.widget.GradientColorTextView
                        android:id="@+id/h_home_plan_iv_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="高薪动态"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ViewFlipper
                        android:id="@+id/h_view_flipper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:inAnimation="@anim/h_anim_vf_in"
                        android:outAnimation="@anim/h_anim_vf_out" />
                </LinearLayout>

                <com.youth.banner.Banner
                    android:id="@+id/banner_home"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/h_imageview3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="12dp"
                    android:background="@mipmap/home_logo_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/h_linearlayout" />

                <com.yhklsdf.lib_common.ui.MyTextView
                    android:id="@+id/h_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="12dp"
                    android:text="实验室"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/h_imageview3"
                    app:layout_constraintStart_toStartOf="@+id/h_imageview3"
                    app:layout_constraintTop_toBottomOf="@+id/h_imageview3" />

                <ImageButton
                    android:id="@+id/h_imageview4"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:background="@mipmap/home_logo_2"
                    app:layout_constraintEnd_toStartOf="@+id/h_imageview3"
                    app:layout_constraintTop_toBottomOf="@+id/h_linearlayout" />

                <com.yhklsdf.lib_common.ui.MyTextView
                    android:id="@+id/h_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="企业招聘"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/h_imageview4"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/h_imageview4"
                    app:layout_constraintTop_toBottomOf="@+id/h_imageview4" />

                <ImageButton
                    android:id="@+id/h_imageview5"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@mipmap/home_logo_4"
                    app:layout_constraintStart_toEndOf="@+id/h_imageview3"
                    app:layout_constraintTop_toBottomOf="@+id/h_linearlayout" />

                <com.yhklsdf.lib_common.ui.MyTextView
                    android:id="@+id/h_textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="我要考研"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/h_imageview5"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/h_imageview5"
                    app:layout_constraintTop_toBottomOf="@+id/h_imageview5" />

                <ImageButton
                    android:id="@+id/h_imageview6"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:background="@mipmap/home_logo_1"
                    app:layout_constraintEnd_toStartOf="@+id/h_imageview4"
                    app:layout_constraintTop_toBottomOf="@+id/h_linearlayout" />

                <com.yhklsdf.lib_common.ui.MyTextView
                    android:id="@+id/h_textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="职业规划"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/h_imageview6"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/h_imageview6"
                    app:layout_constraintTop_toBottomOf="@+id/h_imageview6" />

                <ImageButton
                    android:id="@+id/h_imageview7"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@mipmap/home_logo_5"
                    app:layout_constraintStart_toEndOf="@+id/h_imageview5"
                    app:layout_constraintTop_toBottomOf="@+id/h_linearlayout" />

                <com.yhklsdf.lib_common.ui.MyTextView
                    android:id="@+id/h_textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="创新创业"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/h_imageview7"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/h_imageview7"
                    app:layout_constraintTop_toBottomOf="@+id/h_imageview7" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:elevation="3dp"
            app:cardCornerRadius="11dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/h_view"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/h_widget_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.yhklsdf.lib_common.ui.MyTextView
                    android:id="@+id/h_textview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:text="赛事活动"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/h_rv_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/h_textview7" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="9dp"
            android:elevation="3dp"
            app:cardCornerRadius="11dp">

            <LinearLayout
                android:id="@+id/h_news_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/h_widget_1" />

                    <com.yhklsdf.lib_common.ui.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="9dp"
                        android:text="学校要闻"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>