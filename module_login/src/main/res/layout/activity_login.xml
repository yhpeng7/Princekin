<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="#e0000000"
        android:src="@mipmap/login_register_bg" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.yhklsdf.lib_common.ui.MyTextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <com.yhklsdf.lib_common.ui.MyTextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.yhklsdf.lib_common.ui.MyTextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="46dp"
        android:text="欢迎您!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.yhklsdf.lib_common.ui.MyTextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请登录你的账户"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/hello"
        app:layout_constraintTop_toBottomOf="@id/hello" />

    <LinearLayout
        android:id="@+id/login_message"
        android:layout_width="265dp"
        android:layout_height="159dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hello">

        <EditText
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@null"
            android:hint="学校"
            android:paddingLeft="17dp"
            android:textColorHint="#ACACAC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF" />

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@null"
            android:hint="账号"
            android:paddingLeft="17dp"
            android:textColorHint="#ACACAC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@null"
            android:hint="密码"
            android:paddingLeft="17dp"
            android:textColorHint="#ACACAC" />
    </LinearLayout>

    <com.yhklsdf.lib_common.ui.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="忘记密码?"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="@id/login_message"
        app:layout_constraintTop_toBottomOf="@id/login_message" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/loginbt_bg"
        android:text="登录"
        android:textColor="#FCFCFC"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_message" />

</android.support.constraint.ConstraintLayout>