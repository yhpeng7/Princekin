<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_register_bg" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.yhklsdf.lib_common.ui.MyTextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="17dp"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.yhklsdf.lib_common.ui.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="46dp"
        android:text="欢迎您!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <Button
        android:id="@+id/login"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginTop="414dp"
        android:background="@drawable/loginbt_bg"
        android:text="注册"
        android:textColor="#FCFCFC"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <LinearLayout
        android:id="@+id/register_message"
        android:layout_width="265dp"
        android:layout_height="159dp"
        android:layout_marginTop="174dp"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <EditText
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@null"
            android:hint="选择学校"
            android:paddingLeft="17dp"
            android:textColorHint="#ACACAC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF" />

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@null"
            android:hint="校园账号"
            android:paddingLeft="17dp"
            android:textColorHint="#ACACAC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@null"
            android:hint="设置密码"
            android:paddingLeft="17dp"
            android:textColorHint="#ACACAC" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="105dp"
        android:layout_height="49dp"
        android:layout_marginBottom="146dp"
        android:layout_marginRight="12dp"
        app:cardBackgroundColor="#5595CF"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="@id/register_message"
        app:layout_constraintRight_toRightOf="@id/register_message">
        <com.yhklsdf.lib_common.ui.MyTextView
            android:text="请注册"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>